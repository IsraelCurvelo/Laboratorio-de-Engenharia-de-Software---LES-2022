                            <thead>
                                <tr>
                                    <th scope="col">Código</th>
                                    <th scope="col">Marca</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Modelo</th>
                                    <th scope="col">Tamanho</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>                               

                                @foreach (var item in Model.Produtos)
                                {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.Id)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Marca)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Modelo)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Tamanho)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Status)</td>

                                    @if (item.Status == RaellShoes.Models.Enums.Status.Ativo)
                                    {
                                        <form>
                                            <td><button asp-action="InativarProduto" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Inativar</button></td>
                                        </form>
                                    }
                                    else
                                    {
                                        <form>
                                            <td><button asp-action="AtivarProduto" asp-route-id="@item.Id" class="btn btn-success btn-sm">Ativar</button></td>
                                        </form>
                                    }

                                    <form>
                                        <td><button asp-action="DetalhesProduto" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver Produto</button></td>
                                    </form>
                                </tr>

                                }                               

                            </tbody>
                        </table>

                    </div>
                </div>
