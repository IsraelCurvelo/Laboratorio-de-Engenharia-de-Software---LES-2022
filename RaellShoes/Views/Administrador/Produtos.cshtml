        function formatarMoeda(valor) {
            var moeda = valor.value.replace(/\D/g, '');
            moeda = (moeda / 100).toFixed(2) + '';
            moeda = moeda.replace(".", ",");
            moeda = moeda.replace(/(\d)(\d{3})(\d{3}),/g, "$1.$2.$3,");
            moeda = moeda.replace(/(\d)(\d{3}),/g, "$1.$2,");
            valor.value = moeda;
