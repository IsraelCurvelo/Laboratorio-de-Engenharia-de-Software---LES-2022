                                       pattern="[0-9]{3}" disabled>
                                <div class="invalid-feedback">
                                    *Campo obrigatório (3 Dígitos)
                                </div>

                            </div>

                            <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Telefone</span>
                                <input asp-for="Telefone.Numero" class="form-control" id="telefone" placeholder="Digite seu Telefone"
