                                </select>

                            </div>

                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Email</span>
                                <input asp-for="Usuario.Email" class="form-control" id="lastname" placeholder="Digite seu email" minlength="3"
