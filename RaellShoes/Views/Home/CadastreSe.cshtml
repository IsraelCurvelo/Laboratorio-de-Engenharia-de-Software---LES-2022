                            <select asp-for="EnderecoCobranca.TipoResidencia" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.TipoResidencia>()" id="tipo-endereco-cob" class="form-select">
                            </select>
                            <div class="invalid-feedback">
                                *Campo obrigatório
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
