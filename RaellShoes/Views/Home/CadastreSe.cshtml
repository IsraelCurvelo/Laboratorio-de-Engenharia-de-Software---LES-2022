@model RaellShoes.Models.Clientes.Cliente

@{ ViewData["Title"] = "Cadastre-se"; }



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>RaellShoes - Cadastre-se</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/antigo/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">
            <h1 class="logo"><a href="index.html">RaellShoes<span>.</span></a></h1>
        </div>
    </header><!-- End Header -->


    <section id="cliente" class="cliente">
        <div class="container" style="padding-top: 40px; margin-bottom: -30px;">
            <div class="section-title2">
                <h2>Me conte um pouco sobre <span>Você </span></h2>
            </div>
        </div>

        <!--Form-->
        <div class="container mt-5">
            <form asp-action="CadastrarCliente" method="post" id="form-cliente" class="needs-validation" novalidate>

                <!--Box Dados Pessoais-->
                <div class="info-wrap">
                    <div class="col-lg-3 col-md-6 info">
                        <i class="bi bi-person-badge" style="margin-top: -8px;"></i>
                    </div>
                    <h4> <strong style="padding-left: 10px;"> Quais seus dados pessoais?</strong></h4><br>
                    <div class="row">

                        <div class="row">
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Nome</span>
                                <input asp-for="Nome" class="form-control" id="name"
                                       placeholder="Digite seu primeiro nome" minlength="3" required>
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Sobrenome</span>
                                <input asp-for="Sobrenome" class="form-control" id="lastname"
                                       placeholder="Digite seu sobrenome" minlength="3" required>
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>CPF</span>
                                <input asp-for="Cpf" class="form-control" id="cpf" placeholder="Digite seu CPF"
                                       maxlength="14" onkeypress="formatar('###.###.###-##', this);" pattern="[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}"
                                       required>
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Data de Nascimento</span>
                                <input asp-for="DataNascimento" class="form-control" id="dataNascimento"
                                       placeholder="Data de Nascimento" required>
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Gênero</span>
                                <br>
                                <select asp-for="Genero" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.Genero>()" class="form-select" required>
                                </select>

                            </div>

                        </div>
                    </div>
                </div>

                <br><br>

                <!--Box Telefone-->
                <div class="info-wrap">
                    <div class="col-lg-3 col-md-6 info">
                        <i class="bi bi-phone" style="margin-top: -8px;"></i>
                    </div>
                    <h4> <strong style="padding-left: 10px;"> Qual seu telefone?</strong></h4><br>


                    <div class="row" style="padding-top: 10px;">
                        <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Tipo</span>
                            <select asp-for="Telefone.TipoTelefone" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.TipoTelefone>()" class="form-select" required>
                            </select>

                            <div class="invalid-feedback">
                                *Campo obrigatório
                            </div>
                        </div>

                        <div class="col-lg-1 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>DDD</span>
                            <input asp-for="Telefone.DDD" class="form-control" id="ddd" placeholder="Digite seu DDD" maxlength="2" pattern="[0-9]{2}" required>
                            <div class="invalid-feedback">
                                *Campo obrigatório (2 Dígitos)
                            </div>

                        </div>

                        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Telefone</span>
                            <input asp-for="Telefone.Numero" class="form-control" id="ddd" placeholder="Digite seu Telefone" maxlength="10"
                                   onkeypress="formatar('#####-####', this);" pattern="[0-9]{4}-[0-9]{5}||[0-9]{5}-[0-9]{4}"
                                   required>
                            <div class="invalid-feedback">
                                *Campo obrigatório (9 Dígitos)
                            </div>
                        </div>
                    </div>
                </div>

                <br><br>

                <!--Box Endereço Residencial-->
