                            <input asp-for="Endereco.Numero" type="text" class="form-control" id="numero" placeholder="N°" required>
                            <div class="invalid-feedback">
                                *Campo obrigatório
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Complemento</span>
                            <input asp-for="Endereco.Complemento" type="text" class="form-control" id="complemento"
                                   placeholder="Caso houver, digite o complemento">
                        </div>

                        <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Bairro</span><i class="bi bi-lock" id="lock-bairro" hidden></i>
                            <input asp-for="Endereco.Bairro" type="text" class="form-control" id="bairro-modal"
                                   placeholder="Digite o bairro" required>
                            <div class="invalid-feedback">
                                *Campo obrigatório
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Cidade</span><i class="bi bi-lock" id="lock-cidade" hidden></i>
                            <input asp-for="Endereco.Cidade.Descricao" type="text" class="form-control" id="cidade-modal"
                                   placeholder="Digite a cidade" required>
                            <div class="invalid-feedback">
                                *Campo obrigatório
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Estado</span><i class="bi bi-lock" id="lock-estado" hidden></i>
                            <input asp-for="Endereco.Cidade.Estado.Descricao" type="text" class="form-control" id="estado-modal"
