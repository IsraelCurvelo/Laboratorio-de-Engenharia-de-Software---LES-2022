@model RaellShoes.Models.Clientes.Cliente
@{ViewData["Title"] = "Esqueceu a Senha";}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>RaellShoes - Esqueceu a Senha</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
   

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/antigo/css/style.css" rel="stylesheet">

</head>

<body>   
    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">
            <h1 class="logo"><a href="index.html">RaellShoes<span>.</span></a></h1>
        </div>
    </header><!-- End Header -->


    <section id="cliente" class="cliente">

        <!--Form-->
        <div class="container mt-5">
            <!--SEM FORM POR SER PROTOTIPO E ROTEAR PARA CADASTRO-->
            <!-- <form class="emailnovo">-->
            <form asp-action="EsqueceuSenha" class="needs-validation" novalidate>
                <!--Box Email Login-->
                <div class="info-wrap  "
                     style="align-items: center; margin-left: 25%; height: 100%;width: 50%;margin-top: auto;margin-bottom: auto;">
                    <h4> <strong style="padding-left: 10px; color: black;"> Reenviar Senha</strong></h4><br>
                    <div class="row">
                        <div class="col-lg-5 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Email</span>
                            <input asp-for="Usuario.Email" type="email" class="form-control" id="emailuser" aria-describedby="emailHelp"
                                   placeholder="Digite seu email" required>
                            <div class="invalid-feedback">
                                Este campo é obrigatório
                            </div>
                            <br>
                        </div>


                        <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>DDD</span>
                            <input asp-for="Telefone.DDD" type="text" class="form-control" name="ddd" id="ddd" placeholder="Digite seu DDD" required
                                   maxlength="3" minlength="2">
                            <div class="invalid-feedback">
                                Este campo é obrigatório
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Telefone</span>
                            <input asp-for="Telefone.Numero" type="text" class="form-control" name="ddd" id="ddd" placeholder="Digite seu Telefone"
                                   maxlength="10" onkeypress="formatar('#####-####', this);" pattern="[0-9]{4}-[0-9]{5}||[0-9]{5}-[0-9]{4}"
                                   required>
                            <div class="invalid-feedback">
                                Este campo é obrigatório
                            </div>
                        </div>



                        <button type="submit" class="btn btn-dark col-lg-12 ">Reenviar senha</button> </a>

                    </div>
            </form>
            <!--</form>-->
            <br>
        </div>

    </section>

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    <script>
        function formatar(mascara, documento) {
            var i = documento.value.length;
            var saida = mascara.substring(0, 1);
            var texto = mascara.substring(i)
            if (texto.substring(0, 1) !== saida) {
                documento.value += texto.substring(0, 1);
            }
        }
    </script>   

</body>

</html>