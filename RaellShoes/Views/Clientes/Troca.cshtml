                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Valor do produto </span>
                                <input disabled type="textarea" name="valor-produto" readonly class="form-control-plaintext" id="valor-produto" value="R$ @item.Produto.Valor" style="color: rgb(245, 159, 0); font-weight: bold;">
                                <br>
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                <span>Data da Solicitação</span>
                                <input disabled type="text" name="data-solicitacao" readonly class="form-control-plaintext" id="data-solicitacao" value="@item.DataSolicitacao" style="color: rgb(245, 159, 0); font-weight: bold;">
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                <span>Tipo de Reembolso</span>
                                <input disabled type="text" name="tipo-reembolso" readonly class="form-control-plaintext" id="tipo-reembolso" value="@item.TipoReembolso" style="color: rgb(245, 159, 0); font-weight: bold;">
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                <span>Método de coleta</span>
                                <input disabled type="text" name="metodo-coleta" readonly class="form-control-plaintext" id="metodo-coleta" value="@item.MetodoColeta" style="color: rgb(245, 159, 0); font-weight: bold;">
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Status</span>
                                <input disabled type="text" readonly class="form-control-plaintext" name="status-produto" id="status-produto" value="@Html.DisplayFor(modelItem => item.Status)" style="color: rgb(228, 22, 193); font-weight: bold; font-style: italic;">
                                <div class="validate"></div>
                            </div>
                        </div>
                        <hr>

                        <!--Componente de prodtos-->
                        <div class="row" id="1" style="margin-top: 40px;">
                            <h5><strong style="padding-left: 10px;  color:rgba(7, 6, 88, 0.466);"> Produto </strong></h5><br>
                            <br><br>
                            <!--Produto 1-->
                            <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span></span>
                                <img src='~/assets/img/Produtos/@item.Produto.URLFoto'
                                     id="img-historico" />
                            </div>


                            <div class="col-lg-10 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <div class="row">
                                    <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Descrição</span>
                                        <input disabled type="text" name="descricao" readonly class="form-control-plaintext" id="descricao" value="@item.Produto.Marca - @item.Produto.Modelo - @item.Produto.Nome ">
                                    </div>
                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Tamanho</span>
                                        <input disabled type="textarea" name="tamanho-produto" readonly class="form-control-plaintext" id="tamanho-produto" value="@Html.DisplayFor(model => item.Produto.Tamanho)">
                                    </div>

                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Cor</span>
                                        <input disabled type="textarea" name="cor-produto" readonly class="form-control-plaintext" id="cor-produto" value="@Html.DisplayFor(model => item.Produto.CorPrimariaProduto)">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="container mt-5">
                <!--Box Dados Pedido-->
