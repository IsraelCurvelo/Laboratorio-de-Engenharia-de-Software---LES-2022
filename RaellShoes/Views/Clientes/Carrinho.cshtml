@model RaellShoes.Models.ViewModel.CarrinhoViewModel

@{ViewData["Title"] = "Carrinho de compras";}

@foreach (var item in Model.Carrinho.Produtos)
{
    @Model.Carrinho.ValorTotal{ Model.Carrinho.ValorTotal += item.Valor; }
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>RaellShoes - Carrinho</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
