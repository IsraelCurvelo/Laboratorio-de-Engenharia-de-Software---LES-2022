</head>
<body onload="calcularProdutos()">

    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <h1 class="logo"><a href="">RaellShoes<span>.</span></a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt=""></a>-->

            <nav id="navbar" class="navbar">



                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->

    <section id="cliente" class="cliente">
        <div class="container" style="padding-top: 40px; margin-bottom: -30px;">
            <div class="section-title2">

                <h2>Carrinho de <span style="color: #3bc1ff;">Compras </span></h2>
            </div>
        </div>

        <!--Pedido-->
        <div class="container mt-5">
            <!--Box Produtos-->
            <div class="info-wrap" id="boxproduto">
                <div class="row">
                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Por favor, confirme os dados </span>
                        <br>
                    </div>

                </div>

                <hr>
                <br>
                <div class="col-lg-6 col-md-6 info">
                    <i class="bi bi-cart3" style="margin-top: -8px;"></i>
                </div>
                <h4> <strong style="padding-left: 10px;">Produtos</strong></h4><br>
                <br>

                <!--Produto-->
                @foreach (var item in Model.Carrinho.Produtos)
                {
                    <form asp-action="RemoverProduto">
                        <input type="hidden" asp-for="@item.Id" name="Id" />
                        <div class="row" style="font-size: small; ">
                            <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span></span>
                                <img src="~/assets/img/Produtos/@Html.DisplayFor(model => item.URLFoto)" id="img-historico" />
                            </div>

                            <div class="col-lg-10 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <div class="row" style="font-size: small; ">
                                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Descrição</span>
                                        <input disabled type="textarea" name="descricao-produto" readonly
                                               class="form-control-plaintext" id="descricao-produto" value="@Html.DisplayFor(model => item.Marca) @Html.DisplayFor(model => item.Modelo) - @Html.DisplayFor(model => item.Nome)">
                                    </div>

                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Cor</span>
                                        <input disabled type="textarea" name="cor-produto"
                                               class="form-control-plaintext" id="cor-produto" value="@Html.DisplayFor(model => item.CorPrimariaProduto)">
                                    </div>

                                    <div class="col-lg-1 col-md-4 form-group mt-3 mt-md-0" id="comb-form"
                                         style="margin-left: -20px;">
                                        <span>Tamanho</span>
                                        <input disabled type="textarea" name="tamanho-produto"
                                               class="form-control-plaintext" id="tamanho-produto" value="@Html.DisplayFor(model => item.Tamanho)">
                                    </div>


                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Quantidade</span>
                                        <select class="form-select" style="font-size: xx-small; " id="quantidade(@item.Id)" onchange="calcularValorProduto((@item.Id), this.value)">
                                            @for (int i = 1; i <= item.Quantidade; i++)
                                            {
                                                <option>@i</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Valor</span>
                                        <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext"
                                               id="valor-produto(@item.Id)" value="@Html.DisplayFor(model => item.Valor)">
                                    </div>
                                    <div class="col-lg-1 col-md-6 form-group mt-3 mt-md-0" id="comb-form" hidden>                                        
                                        <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext"
                                               id="hidden-valor-produto(@item.Id)" value="@Html.DisplayFor(model => item.Valor)">
                                    </div>
                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <button class="btn btn-danger btn-sm" style="border-radius: 10px ; margin-top: 10px;" id="botao-remover(@item.Id)">
                                            Remover
                                        </button>
                                    </div>

                                </div>
                            </div>

                            <hr>
                        </div>
                    </form>




                }<br>

                <div class="row" style="font-size: small; ">
                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <a asp-action="index">
                            <button class="btn btn-warning btn-sm" style="border-radius: 10px ; margin-top: 10px;">
                                Continuar
                                Comprando
                            </button>
                        </a>


                    </div>
                    <div class="col-lg-7 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <h5 style="padding-left: 82%; padding-top: 10px "><strong>Sub-Total Produtos:</strong></h5>


                    </div>
                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" >
                        <input readonly class="form-control-plaintext" type="text" style="color: rgb(196, 8, 17); padding-top: 20px;
                             font-weight: bold;font-size: 20px" value="R$ @Html.DisplayFor(model => Model.Carrinho.ValorTotal)" id="subtotal" >

                    </div>


                </div><br>
                <div class="row">
                    @if (Model.Carrinho.Produtos.Count > 0)
                    {
                        <div class="col-lg-12 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <button class="btn btn-success btn-sm col-lg-12"
                                    style="border-radius: 10px ; " onclick="ContinuarPedido('boxendereco')" id="botao-confirmar-produto">
                                Continuar Pedido
                            </button>
                        </div>}
                </div>
            </div>

            <br><br>



            <!--Box Endereço-->
            <div class="info-wrap" id="boxendereco" hidden>

                <div class="col-lg-12 col-md-6 info">
                    <i class="bi bi-house" style="margin-top: -8px;"></i>
                </div>
                <h4> <strong style="padding-left: 10px;">Endereço de Entrega</strong></h4>
                <div class="col-lg-12 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                    <button class="btn btn-dark btn-sm" id="botao-novo-endereco"
                            style="border-radius: 10px ; margin-left: 88%; margin-top: -50px; " data-bs-toggle="modal" data-bs-target="#modalEndereco">
                        Novo
                        Endereço
                    </button>
                </div>
                <br>

                <div class="row">
                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Selecione um endereço para entrega </span>
                        <select asp-items="@(new SelectList(Model.Enderecos,"Id","Apelido"))" class="form-select" style="font-size: small; " id="endereco-entrega">
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <button class="btn btn-primary btn-sm" style="border-radius: 10px ; margin-top: 25px; " id="botao-frete" onclick="calcularFrete()">
                            Calcular
                            Frete
                        </button>
                    </div>
                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Valor do Frete </span>
                        <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext"
                               id="valor-frete" value="R$ 0,00" style=" font-size: small;">
                    </div>

                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <h5 style="padding-top: 14px; padding-left: 60px "><strong>Sub-Total com Frete:</strong></h5>
                        

                    </div>
                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0">
                        <input readonly class="form-control-plaintext" type="text" style="color: rgb(196, 8, 17); padding-top:20px;
                             font-weight: bold;font-size: 20px" value="R$ @Html.DisplayFor(model => Model.Carrinho.ValorTotal)" id="subtotal-2">

                    </div>
                </div>

                <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                    <button class="btn btn-success btn-sm" style="border-radius: 8px ; margin-top: 25px; " onclick="ContinuarPedido('boxcupom')" id="botao-confirmar-endereco">
                        Usar este
                        endereço
                    </button>
                </div>
            </div>
            <br><br>

            <!--Box Cupom-->
            <div class="info-wrap" id="boxcupom" hidden>

                <div class="col-lg-6 col-md-6 info">
                    <i class="bi bi-tag-fill" style="margin-top: -8px;"></i>
                </div>
                <h4> <strong style="padding-left: 10px;">Cupom</strong></h4><br>


                <div class="row">
                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Possui algum Cupom? </span>
                        <br>
                    </div>

                </div>

                <div class="row" style="font-size: small; ">
                    <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <select asp-items="@(new SelectList(Model.Cupons,"Id","Descricao"))" class="form-select" style="font-size: small; " id="cupom-carrinho" onchange="calcularCupom()">
                            <option value="0">Selecionar</option>
                        </select>
                    </div>

                    <div class="col-lg-1 col-md-6 form-group mt-3 mt-md-0" id="comb-form" hidden>

                        <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext"
                               id="hidden-valor-cupom">
                    </div>

                    <div class="col-lg-1 col-md-6 form-group mt-3 mt-md-0" id="comb-form" >

                        <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext" >
                              
                    </div>


                    <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Valor Aplicado </span>
                        <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext"
                               id="valor-cupom" value="R$ 0,00">
                    </div>

                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <h5 style="padding-top: 14px; padding-left: 60px "><strong>Sub-Total Cupom:</strong></h5>


                    </div>
                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0">
                        <input readonly class="form-control-plaintext" type="text" style="color: rgb(196, 8, 17); padding-top:20px;
                             font-weight: bold;font-size: 20px" value="R$ @Html.DisplayFor(model => Model.Carrinho.ValorTotal)" id="subtotal-3">

                    </div>
                </div>
                <div class="row" style="font-size: small; ">
                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <button class="btn btn-success btn-sm"
                                style="border-radius: 8px ; margin-top: 25px; " onclick="ContinuarPedido('boxpagamento')"id="botao-confirmar-cupom">
                            Continuar
                        </button>
                    </div>
                </div>

            </div>


            <br> <br>
            <!--Box Pagamento-->
            <div class="info-wrap" id="boxpagamento" hidden>

                <div class="col-lg-12 col-md-6 info">
                    <i class="bi bi-credit-card-2-back" style="margin-top: -8px;"></i>
                </div>
                <h4> <strong style="padding-left: 10px;">Pagamento</strong></h4>
                <div class="col-lg-12 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                    <button class="btn btn-dark btn-sm" id="botao-novo-cartao"
                            style="border-radius: 10px ; margin-left: 90%; margin-top: -50px; " data-bs-toggle="modal" data-bs-target="#modalCartao">
                        Novo
                        Cartão
                    </button>
                </div>
                <br>

                <div class="row">

                    <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <div class="col-lg-6 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                            <span>Valor Total do Pedido </span>
                            <input type="textarea" name="valor-total-pedido" class="form-control-plaintext " style=" font-size: small; color: red; font-weight: bold; font-size: 30px;"
                                   id="valor-total" value="R$ @Model.Carrinho.ValorTotal" disabled readonly>
                        </div>
                    </div>
                    <span style="color: rgba(0, 0, 0, 0.726); font-style: italic;">Quantos cartões irá usar?</span>
                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <select class="form-select" style="font-size: small; " id="definircartoes"
                                onchange="definirCartoes()">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>
                <br>

                <div class="row">
                    <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Selecione um cartão para pagamento </span>
                        <select asp-items="@(new SelectList(Model.Cartoes,"Id","Apelido"))" class="form-select" style="font-size: small; " id="cartao1" onchange="tipoCartao(this.value, this.id)">
                        </select>
                    </div>

                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Valor a pagar </span>
                        <input type="number" name="valor-produto1" class="form-control " style=" font-size: small;"
                               id="valor-produto1" value="0" >
                    </div>

                    <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                        <span>Parcelamento</span>
                        <select class="form-select" style="font-size: small; " id="parcelamento1">
                            <option value="1">1x sem juros</option>
                            <option value="2">2x sem juros</option>
                            <option value="3">3x sem juros</option>
                            <option value="4">4x sem juros</option>
