                                        <input disabled type="textarea" name="valor-pedido" readonly class="form-control-plaintext" id="valor-pedido" value="@Html.DisplayFor(x => item.Cartao2Apelido)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                        <br>
                                    </div>

                                    <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                        <span>Valor</span>
                                        <input disabled type="text" name="forma-pagamento" readonly class="form-control-plaintext" id="data-pagamento" value="R$ @Html.DisplayFor(x => item.Cartao2Valor)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                    </div>

                                    <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                        <span>Parcelamento</span>
                                        <input disabled type="text" name="forma-pagamento" readonly class="form-control-plaintext" id="forma-pagamento" value="@Html.DisplayFor(x => item.Parcelamento2Valor)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                    </div>


                                </div>
                            }

                            <br><br><br><br><hr /><br>

                            <h5><strong style="padding-left: 10px;  color:rgb(65, 199, 121);"> Produtos </strong></h5><br>
                            <br><br>

                            @foreach (var produto in Model.ProdutosPedidos)
                            {
                                if (produto.PedidoId == item.Id)
                                {
                                    <!--Produto -->
                                    <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span></span>
                                        <img src="~/assets/img/Produtos/@Html.DisplayFor(model => produto.URLFoto)"
                                             id="img-historico" />
                                    </div>

                                    <div class="col-lg-10 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                        <span>Descrição</span>
                                        <input disabled type="textarea" name="descricao-produto" readonly class="form-control-plaintext" id="descricao-produto" value="@Html.DisplayFor(model => produto.Marca) @Html.DisplayFor(model => produto.Modelo) - @Html.DisplayFor(model => produto.Nome)">
                                        <div class="validate"></div>
                                        <div class="row">
                                            <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                                <span>Valor</span>
                                                <input disabled type="text" name="valor-produto" readonly class="form-control-plaintext" id="valor-produto" value="R$ @Html.DisplayFor(model => produto.Valor)">
                                            </div>
                                            <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                                <span>Tamanho</span>
                                                <input disabled type="textarea" name="tamanho-produto" readonly class="form-control-plaintext" id="tamanho-produto" value="@Html.DisplayFor(model => produto.Tamanho)">
                                            </div>

                                            <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                                <span>Cor</span>
                                                <input disabled type="textarea" name="cor-produto" readonly class="form-control-plaintext" id="cor-produto" value="@Html.DisplayFor(model => produto.CorPrimariaProduto)">
                                            </div>

                                            <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                                <span>Quantidade</span>
                                                <input disabled type="number" name="qtde-produto" readonly class="form-control-plaintext" id="qtde-produto" value="@Html.DisplayFor(model => produto.Quantidade)">
                                            </div>

                                            @if (item.Status == RaellShoes.Models.Enums.StatusPedido.Entregue)
                                            {
                                                <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="preencherModal(@produto.Id)">Solicitar Troca</button>
                                                </div>

                                            }


                                        </div>
                                    </div>

                                    <hr>

                                }

                            }

                        </div>
                    </div>
                </div>
            }



        }
        else
        {
            <div class="container mt-5">
                <!--Box Dados Pedido-->
                <div class="info-wrap" style=" border-radius:20px">
                    <div class="row">
                        <div class="section-title">
                            <i class="bi bi-emoji-frown" style="color: black; font-size: 300%"></i>
                        </div>
                    </div>
                    <div class="row">
                        <div class="section-title">
                            <h4 style="color: black">Você ainda não efetuou uma compra conosco :/</h4>
                        </div>
                    </div>
                </div>
            </div>
        }





        <br><br>

    </section>

