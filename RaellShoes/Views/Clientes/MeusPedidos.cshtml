                            <form asp-action="SolicitacaoTroca" class="needs-validation" novalidate>
                                <input type="text" id="id-modal" asp-for="@Model.Troca.IddoProduto" hidden/>
                                <!--Solicitar Troca-->
                                <div class="info-wrap">
                                    <div class="col-lg-3 col-md-6 info">
                                        <i class="bi bi-arrow-left-right" style="margin-top: -8px; color: rgb(142, 104, 179); background-color: rgba(220, 179, 235, 0.397);"></i>
                                    </div>
                                    <h4> <strong style="padding-left: 10px; color: blueviolet;"> Nos conte um pouco sobre essa solicitação</strong></h4><br>


                                    
                                    <br>

                                    <div class="row">
                                        <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                            <span>Motivo da Troca</span>
                                            <select id="motivo-troca" class="form-select" asp-for="@Model.Troca.MotivoTroca" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.MotivoTroca >()" style="font-size:small" required onchange="mostrarExibirSolicitacao()">
                                                <option></option>
                                                
                                            </select>
                                            <div class="invalid-feedback">
                                                *Campo obrigatório
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="div-outro-motivo" hidden>
                                            <span style="color: black;">Qual motivo?</span>
                                            <input type="text" class="form-control" id="outro-motivo" style="font-size:small" asp-for="@Model.Troca.OutroMotivo"
                                                   placeholder="Especifique">
                                            <div class="invalid-feedback">
                                                *Campo obrigatório
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                            <span>Tipo de reembolso desejado</span>
                                            <select class="form-select" id="tipo-reembolso" asp-for="@Model.Troca.TipoReembolso" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.TipoReembolso>()" style="font-size:small" required onchange="mostrarExibirSolicitacao()">
                                                <option></option>
                                                
                                            </select>
                                            <div class="invalid-feedback">
                                                *Campo obrigatório
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="div-tamanho-troca" hidden>
                                            <span style="color: black;">Qual Tamanho?</span>
                                            <select class="form-select" id="tamanho-troca"asp-for="@Model.Troca.Tamanho" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.Tamanho>()" style="font-size:small">
                                                <option></option>
                                                
                                            </select>
                                            <div class="invalid-feedback">
                                                *Campo obrigatório
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                            <span>Método de coleta</span>
                                            <select class="form-select" id="metodo-coleta" asp-for="@Model.Troca.MetodoColeta" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.MetodoColeta>()" style="font-size:small" required>
                                                <option></option>
                                               
                                            </select>
                                            <div class="invalid-feedback">
                                                *Campo obrigatório
                                            </div>
                                        </div>




                                        <div class="col-lg-12 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                            <span>Comentários</span>
                                            <textarea type="text" rows="4" class="form-control" id="comentarios" style="font-size:small"asp-for="@Model.Troca.Comentarios"
                                                      placeholder="Deseja realizar algum comentário?" required></textarea>
                                            <div class="invalid-feedback">
                                                *Campo obrigatório
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div>
                                        <button class="btn btn-success btn-sm col-lg-12" style=" border-radius:8px;">Enviar</button>
                                    </div>
                                </div>
                            </form>
                            <br>
                        </div>

                    </section>
                    <br>
                </div>

            </div>
        </div>
    </div>

