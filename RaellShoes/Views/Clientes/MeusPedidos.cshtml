                <h2>Meus <span style="color: rgb(65, 199, 121);">Pedidos </span></h2>
            </div>
        </div>

        @if (Model.Pedidos.Count >0 )
        {
            @foreach (var item in Model.Pedidos)
            {<!--Pedido-->
                <div class="container mt-5">
                    <!--Box Dados Pedido-->
                    <div class="info-wrap" style=" border-radius:20px">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Número do Pedido </span>
                                <input disabled type="textarea" name="numero-pedido" readonly class="form-control-plaintext" id="numero-pedido" value="@Html.DisplayFor(x => item.NumeroPedido)" style="color: green; font-weight: bold;">
                                <br>
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Valor Total </span>
                                <input disabled type="textarea" name="valor-pedido" readonly class="form-control-plaintext" id="valor-pedido" value="R$ @Html.DisplayFor(x => item.ValorTotal)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                <br>
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                <span>Data da Compra</span>
                                <input disabled type="text" name="forma-pagamento" readonly class="form-control-plaintext" id="data-pagamento" value="@Html.DisplayFor(x => item.DataCompra)" style="color: rgb(62, 91, 255); font-weight: bold;">
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                <span>Forma de Pagamento</span>
                                <input disabled type="text" name="forma-pagamento" readonly class="form-control-plaintext" id="forma-pagamento" value="Cartão de Crédito" style="color: rgb(62, 91, 255); font-weight: bold;">
                            </div>

                            <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Status</span>
                                <input disabled type="text" readonly class="form-control-plaintext" name="status-produto" id="status-produto" value="@Html.DisplayFor(x => item.Status)" style="color: rgb(62, 91, 255); font-weight: bold; font-style: italic;">
                                <div class="validate"></div>
                            </div>


                            <div class="col-lg-2 col-md-1 form-group mt-3 mt-md-0" id="comb-form">
                                <input type="button" class="btn btn-outline-info btn-sm" style="margin-top: 20px; margin-left:-8px; border-radius:5px" id="detalhes-pedido-@item.Id" value="Ver Mais" onclick="mostrarDetalhes(@item.Id, 'detalhes-pedido-@item.Id')">
                            </div>
                        </div>

                      

                        <!--Componente de prodtos-->
                        <div class="row" id="@item.Id" style="margin-top: 40px;" hidden>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                    <span>Valor do Frete </span>
                                    <input disabled type="textarea" name="valor-frete" readonly class="form-control-plaintext" id="valor-frete" value="R$ @Html.DisplayFor(x => item.ValorFrete),00" style="color: rgb(62, 91, 255); font-weight: bold;">

                                    <br>
                                </div>

                                <div class="col-lg-10 col-md-2 form-group mt-3 mt-md-0" id="comb-form">
                                    <span>Endereço de Entrega </span>
                                    <input disabled type="textarea" name="endereco-entrega" readonly class="form-control-plaintext" id="endereco-entrega" value="@Html.DisplayFor(x => item.EnderecoEntrega)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                    <br>
                                </div>
                            </div>

                            @if (item.Cupom != null)
                            {
                                <div class="row">

                                    <div class="col-lg-4 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
                                        <span>Cupom</span>
                                        <input disabled type="text" name="cupom-pagamento" readonly class="form-control-plaintext" id="cupom-pagamento" value="@Html.DisplayFor(x => item.Cupom.Descricao)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                    </div>

                                    <div class="col-lg-2 col-md-2 form-group mt-3 mt-md-0" id="comb-form" readonly>
