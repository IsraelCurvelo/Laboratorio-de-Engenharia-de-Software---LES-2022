                                    <span>Parcelamento</span>
                                    <input disabled type="text" name="forma-pagamento" readonly class="form-control-plaintext" id="forma-pagamento" value="@Html.DisplayFor(x => item.Parcelamento1Valor)" style="color: rgb(62, 91, 255); font-weight: bold;">
                                </div>


                            </div>

