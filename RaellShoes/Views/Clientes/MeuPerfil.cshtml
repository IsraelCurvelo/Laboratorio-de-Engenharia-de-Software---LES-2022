                <!--Box Dados Pessoais-->
                <div class="info-wrap">
                    <div class="col-lg-3 col-md-6 info">
                        <i class="bi bi-person-badge" style="margin-top: -8px;"></i>
                    </div>
                    <h4> <strong style="padding-left: 10px;"> Dados Pessoais</strong></h4><br>
                    <div class="row">

                        <div class="row">
                            <input type="hidden" asp-for="@Model.Id" name="Id" />
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Nome</span>
                                <input asp-for="Nome" class="form-control" id="name"
                                       placeholder="Digite seu primeiro nome" minlength="3" required >
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Sobrenome</span>
                                <input asp-for="Sobrenome" class="form-control" id="lastname"
                                       placeholder="Digite seu sobrenome" minlength="3" required>
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>CPF</span>
                                <input asp-for="Cpf" class="form-control" id="cpf" placeholder="Digite seu CPF"
                                       maxlength="14" onkeypress="formatar('###.###.###-##', this);" pattern="[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}"
                                       required >
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Data de Nascimento</span>
                                <input asp-for="DataNascimento" class="form-control" id="dataNascimento"
                                       placeholder="Data de Nascimento" required>
                                <div class="invalid-feedback">
                                    *Campo obrigatório
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Gênero</span>
                                <br>
                                <select asp-for="Genero" asp-items="Html.GetEnumSelectList<RaellShoes.Models.Enums.Genero>()" class="form-select" required>
                                  
                                </select>

                            </div>

                        </div>
                    </div>
                </div>

                <br>

                <!--Box Telefone-->
                <div class="info-wrap">
                    <input type="hidden" asp-for="@Model.Telefone.Id" name="Telefone.Id" />
