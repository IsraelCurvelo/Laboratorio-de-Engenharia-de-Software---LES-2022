<body>
    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">
            <h1 class="logo"><a href="">RaellShoes<span>.</span></a></h1>
        </div>
    </header><!-- End Header -->

    <section id="cliente" class="cliente">
        <div class="container" style="padding-top: 40px; margin-bottom: -30px;">
            <div class="section-title2">
                <h2> <span style="color: rgb(8, 155, 155)">Senha </span></h2>
            </div>
        </div>
        <!--Form-->
        <div class="container mt-5">
            <!--SEM FORM POR SER PROTOTIPO E ROTEAR PARA CADASTRO-->
            <!-- <form class="emailnovo">-->
            <form asp-action="AlterarSenha" class="needs-validation" novalidate>
                <div class="info-wrap">
                    <div class="col-lg-3 col-md-6 info">
                        <i class="bi bi-person-badge" style="margin-top: -8px; background-color: rgb(158, 252, 220); color: rgb(8, 155, 155)"></i>
                    </div>
                    <h4> <strong style="padding-left: 10px; color: rgb(8, 155, 155)"> Alterar Senha</strong></h4><br>
                    <div>
                    </div>
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Senha Atual</span>
                                <input class="form-control" id="senha-atual" type="password" placeholder="Digite sua senha atual" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z$*&@@#]{8,}" required asp-for="@Model.SenhaAtual">
                                <div class="invalid-feedback">
                                    A senha deve conter ao menos 8 caracteres, uma letra maiúscula, uma letra minúscula e um digito.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Nova Senha</span>
                                <input class="form-control" id="nova-senha" type="password" placeholder="Digite a nova senha" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z$*&@@#]{8,}" required asp-for="@Model.NovaSenha">
                                <div class="invalid-feedback">
                                    A senha deve conter ao menos 8 caracteres, uma letra maiúscula, uma letra minúscula e um digito.
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 form-group mt-3 mt-md-0" id="comb-form">
                                <span>Confirmação Senha</span>
                                <input class="form-control" id="confirmacao-senha" type="password" placeholder="Confirme sua senha" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z$*&@@#]{8,}" required asp-for="@Model.ConfirmacaoSenha">
                                <div class="invalid-feedback">
                                    A senha deve conter ao menos 8 caracteres, uma letra maiúscula, uma letra minúscula e um digito.
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-warning col-lg-12 ">Alterar senha</button>
                </div>
            </form><!--</form>-->
            <br>
        </div>
    </section>




    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

